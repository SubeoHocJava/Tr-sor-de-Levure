@{
    ViewData["Title"] = "Register";
}


<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6 text-center">
            <div class="d-flex justify-content-between">
                <!-- Tab: Đã đăng ký -->
                <a class="btn btn-link btn-lg text-uppercase text-dark font-weight-bold" href="@Url.Action("Login", "Login")">
                    Already Registered? <!-- Đã có tài khoản? -->
                </a>

                <!-- Tab: Tạo tài khoản mới -->
                <a class="btn btn-link btn-lg text-uppercase text-dark font-weight-bold" href="@Url.Action("Register", "Login")">
                    Create Your Account <!-- Tạo tài khoản mới -->
                </a>
            </div>
        </div>
    </div>

    <div class="container mt-4">
        <div class="row justify-content-center">
            <div class="col-md-6 col-lg-8">
                <div class="card-body">
                    <p class="text-center">Create an account to join the elite with Trésor de Levure</p>
                    <form action="/register" method="POST" id="registration-form">

                        <!-- Tên người dùng -->
                        <div class="form-group">
                            <input type="text" class="form-control" id="registration-form-fullname" name="fullName"
                                   placeholder=" " required>
                            <label for="registration-form-firstname">Full Name</label>
                        </div>

                        <!-- Ngày sinh -->
                        <div class="form-group">
                            <label for="registration-form-dob">Date of Birth</label>
                            <input type="text" class="form-control" id="registration-form-dob" name="dob"
                                   placeholder=" " required>
                        </div>

                        <!-- Email người dùng -->
                        <div class="form-group">
                            <input type="email" class="form-control" id="registration-form-email" name="email"
                                   placeholder=" " required>
                            <label for="registration-form-email">Email Address</label>
                        </div>

                        <!-- Số điện thoại -->
                        <div class="form-group">
                            <input type="tel" class="form-control" id="registration-form-phone" name="phone"
                                   placeholder=" " required>
                            <label for="registration-form-phone">Phone Number</label>
                        </div>

                        <!-- Địa điểm -->
                        <div class="form-group">
                            <label for="location" class="form-label"></label>
                            <select class="form-select" id="location" name="location" required>
                                <option selected disabled value="">Loading countries...</option>
                            </select>
                        </div>

                        <div class="mb-2 mt-4 d-flex">
                            <div class="form-check form-check-inline">
                                <label for="gender" class="form-label">Gender:</label>
                            </div>
                            <div>
                                <div class="form-check form-check-inline">
                                    <input class="form-check-input" type="radio" id="male" name="gender" onclick="onlyOne(this)">
                                    <label class="form-check-label" for="male">Male</label>
                                </div>
                                <div class="form-check form-check-inline">
                                    <input class="form-check-input" type="radio" id="female" name="gender">
                                    <label class="form-check-label" for="female">Female</label>
                                </div>
                                <div class="form-check form-check-inline">
                                    <input class="form-check-input" type="radio" id="other" name="gender">
                                    <label class="form-check-label" for="other">Other</label>
                                </div>
                            </div>
                        </div>

                        <!-- Mật khẩu -->
                        <div class="form-group">
                            <input type="password" class="form-control" id="registration-form-password"
                                   name="password" placeholder=" " required>
                            <label for="registration-form-password">Password</label>
                            <i id="togglePassword" class="fas fa-eye-slash eye-icon"></i>
                        </div>

                        <!-- Xác nhận mật khẩu -->
                        <div class="form-group">
                            <input type="password" class="form-control" id="registration-form-password-confirm"
                                   name="passwordConfirm" placeholder=" " required>
                            <label for="registration-form-password-confirm">Confirm Password</label>
                            <i id="togglePassword" class="fas fa-eye-slash eye-icon"></i>
                        </div>

                        <!-- Chính sách bảo mật -->
                        <div class="form-group text-center">
                            <p>By registering, you agree to our <a href="/privacy-policy">Privacy Policy</a>.</p>
                        </div>

                        <!-- Nút đăng ký -->
                        <div class="form-group text-center">
                            <button type="submit" class="btn btn-dark w-100">Register</button>
                        </div>

                    </form>
                </div>
            </div>
        </div>
    </div>

    <!-- jQuery, jQuery UI, and Bootstrap JS -->
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
    <script src="https://code.jquery.com/ui/1.12.1/jquery-ui.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-select/1.13.1/js/bootstrap-select.min.js"></script>
    <!-- External JS -->
    <script src="scripts.js"></script>
</div>

