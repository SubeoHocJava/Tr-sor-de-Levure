@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">Welcome</h1>
    <p>Learn about <a href="https://learn.microsoft.com/aspnet/core">building Web apps with ASP.NET Core</a>.</p>
    <div class="container mt-5">
        <!-- Bao bọc nội dung chính trong một container có khoảng cách từ trên -->
        <!-- Phần Tab chọn: Đã đăng ký hoặc Tạo tài khoản -->
        <div class="row justify-content-center">
            <div class="col-md-6 text-center">
                <div class="d-flex justify-content-between">
                    <!-- Tab: Đã đăng ký -->
                    <a class="btn btn-link btn-lg text-uppercase text-dark font-weight-bold" href="@Url.Action("Login", "Login")">
                        Already Registered?
                    </a>

                    <!-- Tab: Tạo tài khoản mới -->
                    <a class="btn btn-link btn-lg text-uppercase text-dark font-weight-bold" href="@Url.Action("Register", "Account")">
                        Create Your Account
                    </a>
                </div>
            </div>
        </div>

        <!-- Form đăng nhập -->
        <div class="row justify-content-center mt-4">
            <div class="col-md-6 col-lg-8">
                <div class="card-body p-5">
                    <p class="text-center">
                        If you are already registered, login here:
                    </p>

                    <!-- Form đăng nhập -->
                    <form method="post" action="@Url.Action("Login", "Login")">
                        <!-- Sử dụng phương thức POST cho form -->
                        <!-- Trường nhập email -->
                        <div class="form-group">
                            <input type="email" class="form-control" id="login-email" name="Email" placeholder=" " required>
                            <label for="login-email">Email address</label>
                        </div>

                        <!-- Trường nhập mật khẩu -->
                        <div class="form-group">
                            <input type="password" class="form-control" id="login-password" name="Password" placeholder=" " required>
                            <label for="login-password">Password</label>
                            <!-- Biểu tượng "mắt" để bật/tắt hiển thị mật khẩu -->
                            <i id="togglePassword" class="fas fa-eye-slash eye-icon"></i>
                        </div>

                        <!-- Checkbox "Nhớ tôi" và liên kết quên mật khẩu -->
                        <div class="d-flex justify-content-between align-items-center mb-3">
                            <div class="form-check">
                                <input type="checkbox" class="form-check-input" id="rememberMe" name="RememberMe">
                                <label class="form-check-label" for="rememberMe">Remember me</label>
                            </div>
                            <a href="@Url.Action("ForgotPassword", "Account")" class="text-muted small">Forgot password?</a>
                        </div>

                        <!-- Liên kết tới Chính sách bảo mật -->
                        <div class="cms-generic-copy text-center mb-3">
                            Read the
                            <a href="#" title="Privacy Policy." target="_blank" rel="noopener noreferrer">
                                Privacy Policy
                            </a>
                            for further information
                        </div>

                        <!-- Nút Đăng nhập -->
                        <button type="submit" class="btn btn-dark" id="login">Login</button>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <!-- JavaScript để bật/tắt mật khẩu -->
    <script src="~/Log_Res/scripts.js"></script>

</div>


