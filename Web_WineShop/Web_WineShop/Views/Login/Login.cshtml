<head>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" rel="stylesheet">  @* Icon mắt *@
</head>

<div class="text-center">
    <div class="container mt-5">
        <div class="row justify-content-center">
            <div class="col-md-6 text-center">
                <div class="d-flex justify-content-between d-flexx">
                    <a class="btn btn-link btn-lg text-uppercase text-dark font-weight-bold" href="@Url.Action("Login")">
                        <strong>Already Registered?</strong>
                    </a>
                    <a class="btn btn-link btn-lg text-uppercase text-dark font-weight-bold" href="@Url.Action("Register")">
                        <strong>Create Your Account</strong>
                    </a>
                </div>
            </div>
        </div>

        <div class="row justify-content-center">
            <div class="col-md-6 col-lg-8">
                <div class="card-body p-4">
                    <p class="text-center mb-5">
                        If you are already registered, login here:
                    </p>
                    <form id="loginForm">
                        <div class="form-group">
                            <input type="email" class="form-control" id="login-email" name="Email" placeholder=" " required>
                            <label for="login-email">Email address</label>
                        </div>
                        <div class="form-group">
                            <input type="password" class="form-control" id="login-password" name="Password" placeholder=" " required>
                            <label for="login-password">Password</label>
                            <i id="togglePassword" class="fas fa-eye-slash eye-icon"></i>
                        </div>
                        <!-- Thông báo lỗi nếu email ko tồn tại hoặc mk sai -->
                        <div id="error-message" class="text-danger"></div>
                        <div class="d-flex justify-content-end mb-3">
                            <a href="@Url.Action("ForgotPassword")" class="text-muted small">Forgot password?</a>
                        </div>
                        <div class="cms-generic-copy text-center mb-3">
                            Read the
                            <a href="https://www.google.com/search?client=firefox-b-d&q=%C4%91i%E1%BB%81u+kho%E1%BA%A3n" title="Privacy Policy" target="_blank" rel="noopener noreferrer">
                                Privacy Policy
                            </a>
                            for further information
                        </div>
                        <button type="submit" class="btn btn-dark w-100" id="login">Login</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>


<script src="~/js/login.js"></script>
<script>
    var loginUrl = '@Url.Action("Login", "Login")'; // Razor ko đọc đc, cần cấu hình như v (JS chạy trong trình duyệt, Razor chạy trong máy chủ)
</script>
<script src="~/js/login.js"></script>
<script src="~/js/login_ajax.js"></script>


