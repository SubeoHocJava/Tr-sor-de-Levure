@{
    ViewData["Title"] = "Forgot Password";
}

<div class="container mt-5">
    <!-- Bao bọc nội dung chính trong một container có khoảng cách từ trên -->
    <!-- Phần Tab chọn: Đã đăng ký hoặc Tạo tài khoản -->
    <div class="row justify-content-center">
        <div class="col-md-6 text-center">
            <div class="d-flex justify-content-between">
                <!-- Tab: Đã đăng ký -->
                <a class="btn btn-link btn-lg text-uppercase text-dark font-weight-bold" href="@Url.Action("Login", "Login")">
                    Already Registered?
                </a>

                <!-- Tab: Tạo tài khoản mới -->
                <a class="btn btn-link btn-lg text-uppercase text-dark font-weight-bold" href="@Url.Action("Register", "Login")">
                    Create Your Account
                </a>
            </div>
        </div>
    </div>

    <!-- Form quên mật khẩu -->
    <div class="row justify-content-center mt-4">
        <div class="col-md-6 col-lg-8">
            <div class="card-body p-5">
                <h2 class="text-center mb-4">Forgot Password</h2>
                <p class="text-center">
                    Please enter your email address to reset your password:
                </p>

                <!-- Trường nhập email -->
                <form method="post" action="@Url.Action("ForgotPassword", "Login")">
                    <div class="form-group">
                        <input type="email" class="form-control" id="forgot-email" name="email" placeholder=" " required>
                        <label for="forgot-email">Email address</label>
                    </div>

                    <!-- Nút Gửi yêu cầu -->
                    <div class="text-center">
                        <button type="submit" class="btn btn-dark" id="sendResetLink">Send</button>
                    </div>
                </form>

                <!-- Liên kết quay lại trang đăng nhập -->
                <div class="text-center mt-3">
                    <a href="@Url.Action("Login", "Login")" class="text-muted small">Remembered your password? Login here</a>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- JavaScript để xử lý các sự kiện -->
<script src="scripts.js"></script>
