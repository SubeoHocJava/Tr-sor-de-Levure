@model Web_WineShop.Models.Product

@{
    ViewData["Title"] = "Home Page";
    Layout = "~/Views/Whisky/_LayoutWhisky.cshtml";
}

<!--List Products-->
<div class="col-xl-9 col-lg-8 col-md-12">
    <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 row-cols-lg-4 g-4">
        <div class="col">
            <div class="card product-card">
                <img src="https://whisky.vn/wp-content/uploads/2024/10/Glen-Moray-12.jpg"
                     class="card-img-top"
                     alt="Glen Moray" />
                <div class="card-body">
                    <h5 class="card-title">Glen Moray</h5>
                    <p class="card-text">Rượu Whisky Glen Moray 12 <br />700ML</p>
                    <div class="price">
                        <p class="card-text">1.200.000 đ</p>
                    </div>
                    <div class="hover-buttons">
                        <button class="btn btn-buy">Mua</button>
                        <button class="btn btn-view">Thêm</button>
                        <button class="btn btn-wishlist">
                            <i class="fa fa-heart"></i>
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


