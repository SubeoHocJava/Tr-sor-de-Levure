@model Web_WineShop.Models.ShoppingCart

@{
    ViewData["Title"] = "Shopping Cart";
}

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <link rel="stylesheet" href="/shopping_cart/style.css">
    <script src="/shopping_cart/scrip_shopping.js"></script>
</head>

<body>
    <div id="header"></div>
    <div class="container">
        <div class="row">
            <!-- Left container -->
            <div class="container-left col-md-7">
                <table class="table">
                    <thead>
                        <tr>
                            <th>Product</th>
                            <th>Price</th>
                            <th>Quantity</th>
                            <th>Totals</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.Items)
                        {
                            <tr>
                                <td>
                                    <div class="card card-container-shopping" style="max-width: 400px;">
                                        <div class="row g-0 align-items-center">
                                            <div class="col-md-3 d-flex justify-content-center">
                                                <img src="@item.ImageUrl" class="img-fluid rounded-start" alt="@item.Name">
                                            </div>
                                            <div class="col-md-9">
                                                <div class="card-body">
                                                    <span class="card-title text-color text-size-16">
                                                        @item.Name
                                                    </span>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </td>
                                <td class="text-center">@item.Price.ToString("C")</td>
                                <td class="text-center">
                                    <div class="d-flex align-items-center quantity-input">
                                        <button class="btn btn-outline-secondary btn-sm me-1" type="button" onclick="updateQuantity(@item.Id, -1)">−</button>
                                        <input type="number" value="@item.Quantity" min="1" class="form-control text-center"
                                               style="width: 60px;" onchange="updateQuantity(@item.Id, this.value)">
                                        <button class="btn btn-outline-secondary btn-sm ms-1" type="button" onclick="updateQuantity(@item.Id, 1)">+</button>
                                    </div>
                                </td>
                                <td class="text-center">@item.Total.ToString("C")</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
            <!-- Right container -->
            <div class="container-right col-md-5">
                <div class="border p-4 rounded shadow-sm">
                    <h5 class="mb-3">Order Summary</h5>
                    <div class="d-flex justify-content-between">
                        <span>Temporary calculation:</span>
                        <span>@Model.Items.Sum(i => i.Price * i.Quantity).ToString("C")</span>
                    </div>
                    <div class="d-flex justify-content-between mt-2">
                        <span>Discount:</span>
                        <span>@Model.Discount.ToString("C")</span>
                    </div>
                    <hr>
                    <div class="d-flex justify-content-between fw-bold">
                        <span>Totals:</span>
                        <span>@Model.Total.ToString("C")</span>
                    </div>
                    <hr>
                    <div class="d-flex align-items-center mb-3">
                        <i class="bi bi-ticket-perforated me-2 text-primary"></i>
                        <input type="text" class="form-control me-2" placeholder="Enter coupon code">
                        <button class="pay-btn">Apply</button>
                    </div>
                    <button class="mt-3 pay-btn" data-bs-toggle="modal" data-bs-target="#orderSummaryModal">Payment</button>
                    <!-- Order detail -->
                    <div class="modal fade" id="orderSummaryModal" tabindex="-1" aria-labelledby="orderSummaryModalLabel"
                         aria-hidden="true">
                        <div class="modal-dialog">
                            <div class="modal-content">
                                <div class="modal-body">
                                    <div class="w-100 h-auto p-4">
                                        <h2 class="text-center mb-4">Order Summary</h2>

                                        <!-- Product Information -->
                                        @foreach (var item in Model.Items)
                                        {
                                            <div class="d-flex align-items-center mb-4">
                                                <img src="@item.ImageUrl" alt="@item.Name" class="img-fluid" style="max-width: 120px; height: auto;">
                                                <div class="ms-3">
                                                    <p class="mb-1"><strong>@item.Name</strong></p>
                                                    <p class="mb-1"><strong>Quantity:</strong> @item.Quantity</p>
                                                    <p class="mb-1"><strong>Price:</strong> @item.Total.ToString("C")</p>
                                                </div>
                                            </div>
                                        }

                                        <hr>
                                        <!-- Subtotal, Shipping, Voucher, Total -->
                                        <div class="d-flex justify-content-between mb-3">
                                            <p class="fw-bold">SubTotal:</p>
                                            <p class="text-end fw-bold">@Model.Items.Sum(i => i.Price * i.Quantity).ToString("C")</p>
                                        </div>
                                        <hr>
                                        <div class="d-flex justify-content-between mb-3">
                                            <p class="fw-bold">Shipping:</p>
                                            <p class="text-end">$0.00</p>
                                        </div>
                                        <hr>
                                        <div class="d-flex justify-content-between mb-3">
                                            <p class="fw-bold">Voucher:</p>
                                            <p class="text-end">@Model.Discount.ToString("C")</p>
                                        </div>
                                        <hr>
                                        <div class="d-flex justify-content-between mb-3">
                                            <p class="fw-bold">Total:</p>
                                            <p class="text-end text-danger fw-bold fs-2">@Model.Total.ToString("C")</p>
                                        </div>
                                        <hr>

                                        <!-- Address Information -->
                                        <div class="mb-4">
                                            <label for="address" class="form-label fw-bold">Shipping Address</label>
                                            <p id="address" class="border p-2 rounded-3 bg-light">@Model.ShippingAddress</p>
                                        </div>

                                        <!-- Payment Method -->
                                        <div class="mb-4">
                                            <h4 class="fw-bold">Payment Method</h4>
                                            <div class="form-check">
                                                <input class="form-check-input" type="radio" name="payment_method"
                                                       id="payment_method_card" value="card" checked>
                                                <label class="form-check-label" for="payment_method_card">
                                                    Bank Transfer
                                                </label>
                                            </div>
                                            <div class="form-check">
                                                <input class="form-check-input" type="radio" name="payment_method"
                                                       id="payment_method_cash" value="cash">
                                                <label class="form-check-label" for="payment_method_cash">
                                                    Cash on Delivery
                                                </label>
                                            </div>
                                        </div>

                                        <!-- Payment Button -->
                                        <div class="text-center">
                                            <button class="pay-btn w-100 py-2">Proceed to Payment</button>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div id="footer"></div>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet">
</body>

</html>
