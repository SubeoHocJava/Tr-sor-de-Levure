@{
    Layout = null;  // Thay null bằng tên layout nếu có, ví dụ "_Layout".
    ViewData["Title"] = "Send Wishlist to a Friend";  // Thiết lập tiêu đề trang
}

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="~/css/Wishlist/Send_to_friend.css" asp-append-version="true" />
    <title>@ViewData["Title"]</title>
</head>

<body>
    <!-- Header -->
    <div id="header">
        <!-- Nội dung header nếu có -->
    </div>

    <div class="wishlist-container">
        <div id="wishlist_friend_form_container" class="form-builder">
            <h1 class="wishlist-title">Send Wishlist to a Friend</h1>
            <p class="wishlist-description">
                Tell a friend about your wishlist.<br>Simply fill in your name and email address, and the name and email
                address of the friend you wish to tell.
            </p>

            <form action="/wishlist/send_to_friend/381748" method="post" id="wishlist_friend_form">
                <div class="wishlist-friend-form-holder">
                    <div class="message"></div>

                    <div class="form-group friend_name_wrapper">
                        <label for="friend_name">Friend's Name <span class="mandatory">*</span></label>
                        <input id="friend_name" class="input--expand" type="text" name="friend_name" value="">
                        <div class="checkout-select-message--error" style="display: none;">Name required</div> <!-- Chỉnh lại lớp ở đây -->
                    </div>

                    <div class="form-group friend_email_wrapper">
                        <label for="friend_email">Friend's Email <span class="mandatory">*</span></label>
                        <input id="friend_email" class="input--expand" type="email" name="friend_email" value="">
                        <div class="checkout-select-message--error" style="display: none;">Email required</div> <!-- Chỉnh lại lớp ở đây -->
                    </div>

                    <div class="form-group your_name_wrapper">
                        <label for="your_name">Your Name <span class="mandatory">*</span></label>
                        <input id="your_name" class="input--expand" type="text" name="your_name" value="">
                        <div class="checkout-select-message--error" style="display: none;">Your name is required</div> <!-- Chỉnh lại lớp ở đây -->
                    </div>

                    <div class="form-group your_email_wrapper">
                        <label for="your_email">Your Email <span class="mandatory">*</span></label>
                        <input id="your_email" class="input--expand" type="email" name="your_email" value="">
                        <div class="checkout-select-message--error" style="display: none;">Your email is required</div> <!-- Chỉnh lại lớp ở đây -->
                    </div>

                    <div class="form-group message_wrapper">
                        <label for="message">Your Message</label>
                        <textarea id="message" class="textarea--expand" name="message" rows="5"></textarea>
                    </div>

                    <!-- reCAPTCHA -->
                    <div class="form-group g_recaptcha_response_wrapper">
                        <div id="g-recaptcha_wishlist_friend" class="g-recaptcha"
                             data-sitekey="6Lc-9PAUAAAAAKOHaVHGDTmqVN_jN9Wjv7eYMzOI"></div>
                    </div>

                    <!-- Submit Button -->
                    <div class="form-group row">
                        <button class="checkout-button" type="submit">Send Wishlist</button>
                    </div>
                </div>
            </form>
        </div>
    </div>

    <!-- Footer -->
    <div id="footer">
        <!-- Nội dung footer nếu có -->
    </div>

    <script src="~/js/Wishlist/Send_to_friend.js"></script>
</body>

</html>
