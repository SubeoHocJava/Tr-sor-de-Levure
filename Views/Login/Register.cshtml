@{
	ViewData["Title"] = "Register";
}

<head>
	<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
	<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" rel="stylesheet"> <!-- Font Awesome for eye icon -->
</head>

<div class="container mt-5">
	<div class="row justify-content-center">
		<div class="col-md-6 text-center">
			<div class="d-flex justify-content-between">
				<!-- Navigation Links -->
				<a class="btn btn-link btn-lg text-uppercase text-dark font-weight-bold" href="@Url.Action("Login", "Login")">
					<strong>Already Registered?</strong>
				</a>
				<a class="btn btn-link btn-lg text-uppercase text-dark font-weight-bold" href="@Url.Action("Register", "Login")">
					<strong>Create Your Account</strong>
				</a>
			</div>
		</div>
	</div>

	<div class="row justify-content-center">
		<div class="col-md-6 col-lg-8">
			<div class="card-body">
				<p class="text-center">Create an account to join the elite with Trésor de Levure</p>
				<!-- Registration Form -->
				<form id="registration-form">
					<!-- FULL NAME -->
					<div class="form-group">
						<input type="text" class="form-control" id="registration-form-fullname" name="fullName" placeholder=" " required>
						<label for="registration-form-fullname">Full Name</label>
					</div>

					<!-- DATE OF BIRTH -->
					<div class="form-group">
						<input type="date" class="form-control" id="registration-form-dob" name="dob" required>
						<label for="registration-form-dob">Date of Birth</label>
					</div>

					<!-- Thông báo lỗi nếu chưa đủ 18 tuổi -->
					@*                      <div id="error-message" class="text-danger text-center"></div>
					*@
					<!-- EMAIL -->
					<div class="form-group">
						<input type="email" class="form-control" id="registration-form-email" name="email" placeholder=" " required>
						<label for="registration-form-email">Email Address</label>
					</div>

					<!-- Thông báo lỗi nếu email đã tồn tại -->
					@*   <div id="error-message" class="text-danger text-center"></div> *@

					<!-- PHONE NO -->
					<div class="form-group">
						<input type="tel" class="form-control" id="registration-form-phone" name="phone" placeholder=" " required>
						<label for="registration-form-phone">Phone Number</label>
					</div>
					<!-- COUNTRY -->
					<div class="form-group">
						<select class="form-select" id="country" name="country" required>
							<option value="">Select Country...</option>
							<option value="US">United States</option>
							<option value="VN">Vietnam</option>
							<option value="FR">France</option>
							<!-- More countries can be added -->
						</select>
					</div>
					<!-- GENDER -->
					<div class="mb-2 mt-4 d-flex">
						<label for="gender" class="form-label">Gender:</label>
						<div class="form-check form-check-inline">
							<input class="form-check-input" type="radio" id="male" name="gender" value="Male">
							<label class="form-check-label" for="male">Male</label>
						</div>
						<div class="form-check form-check-inline">
							<input class="form-check-input" type="radio" id="female" name="gender" value="Female">
							<label class="form-check-label" for="female">Female</label>
						</div>
					</div>
					<!-- PASSWORD -->
					<div class="form-group">
						<input type="password" class="form-control" id="registration-form-password" name="password" placeholder=" " required>
						<label for="registration-form-password">Password</label>
						<i class="fas fa-eye-slash eye-icon"></i>
					</div>

					<!-- CONFIRM PASSWORD -->
					<div class="form-group">
						<input type="password" class="form-control" id="registration-form-password-confirm" name="passwordConfirm" placeholder=" " required>
						<label for="registration-form-password-confirm">Confirm Password</label>
						<i class="fas fa-eye-slash eye-icon"></i>
					</div>

					<!-- Thông báo lỗi nếumk ko trùng khớp -->
					<div id="error-message" class="text-danger form-group text-center"></div>

					<div id="successMessage" class="alert alert-success text-center" style="display: none;">
						Đăng ký thành công! Bạn sẽ được chuyển đến trang đăng nhập.
					</div>

					<!-- Privacy Policy -->
					<div class="form-group text-center">
						<p>
							By registering, you agree to our  <a href="https://www.google.com/search?client=firefox-b-d&q=%C4%91i%E1%BB%81u+kho%E1%BA%A3n" title="Privacy Policy" target="_blank" rel="noopener noreferrer">
								Privacy Policy
							</a>.
						</p>
					</div>
					<!-- Thông báo lỗi nếu điền đủ thông tin -->
					@* <div id="error-message" class="text-danger text-center"></div> *@

					<!-- Register Button -->
					<div class="form-group text-center">
						<button type="submit" class="btn btn-dark w-100">Register</button>
					</div>

				</form>
			</div>
		</div>
	</div>
</div>


<script src="~/js/login.js"></script>
<script>
	var regisUrl = '@Url.Action("Register", "Login")';
</script>
<script src="~/js/login_ajax.js"></script><script src="~/js/country.js"></script>
