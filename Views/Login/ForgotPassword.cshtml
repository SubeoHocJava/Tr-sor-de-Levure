@{
    ViewData["Title"] = "Forgot Password";
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">

<div class="container mt-5">
    <!-- Form quên mật khẩu -->
    <div class="row justify-content-center mt-4">
        <div class="col-md-6 col-lg-8">
            <div class="card-body p-5">
                <!-- Tiêu đề trang -->
                <h2 class="text-center mb-4 fw-bold fs-3">FORGOT PASSWORD</h2>
                <p class="text-center">
                    Please enter your email address to reset your password:
                </p>

                <!-- Form nhập email -->
                <form id="forgotPasswordForm" method="post">
                    <div class="form-group">
                        <input type="email" class="form-control" id="forgot-email" name="email" placeholder=" " required>
                        <label for="forgot-email">Email address</label>
                    </div>

                    <!-- Thông báo lỗi nếu email không hợp lệ -->
                    <div id="errorMessage" class="text-danger pb-3 text-center" style="display:none;"></div>

                    <!-- Thông báo thành công nếu email hợp lệ -->
                    <div id="successMessage" class="text-success pb-3 text-center" style="display:none;"></div>

                    <!-- Nút gửi yêu cầu -->
                    <div class="text-center">
                        <button type="submit" class="btn btn-dark" id="sendResetLink">Send</button>
                    </div>
                </form>

                <!-- Liên kết quay lại trang đăng nhập -->
                <div class="text-center mt-3">
                    <a href="@Url.Action("Login")" class="text-muted small"><strong>Go back to the login page</strong></a>
                </div>
            </div>
        </div>
    </div>
</div>

<script src="~/js/login_ajax.js"></script>
<script>
    var forgotUrl = '@Url.Action("ForgotPassword", "Login")'; // Razor ko đọc đc, cần cấu hình như v (JS chạy trong trình duyệt, Razor chạy trong máy chủ)
</script>
