@{
	ViewData["Title"] = "Admin";
}

<div class="container-fluid">
	<div class="row">
		<!-- CATEGORY -->
		<div class="col-2">
			<div class="container body-card mt-4">
				<div class="mb-4 text-center">
					<!-- Circular container for the admin image -->
					<div class="admin-image-container">
						<img src="/admin/nhiet-do-ly-tuong-de-phuc-vu-vang.webp" alt="Admin" class="admin-image">
					</div>
					<h2>ADMIN PAGE</h2>
				</div>
				<!-- Tools -->
				<div class="text-center">
					<ul class="new-list cursor-pointer ">
						<li data-target="dashboard">
							<i class="bi bi-house-door"></i><span> Dashboard</span>
						</li>
						<li data-target="UserManagement">
							<i class="bi bi-person-circle"></i><span> User Management</span>
						</li>
						<li data-target="product-management">
							<i class="bi bi-box"></i><span> Product Management</span>
						</li>
						<li data-target="brand-management">
							<i class="bi bi-map"></i><span> Brand Management</span>
						</li>
						<li data-target="category-management">
							<i class="bi bi-book"></i><span> Category Management</span>
						</li>
						<li data-target="VoucherManagement">
							<i class="bi bi-book"></i><span> Voucher Management</span>
						</li>
						<li data-target="PendingOrders">
							<i class="bi bi-heart"></i><span>Solving Order</span>
						</li>
						<li data-target="BankManagement">
							<i class="bi bi-credit-card"></i><span>Bank Management</span>
						</li>
						<li data-target="upload-knowledge">
							<i class="bi bi-upload-knowledge"></i><span>Upload Knowledge</span>
						</li>
						<li data-target="logout">
							<i class="bi bi-box-arrow-right"></i><span> Logout</span>
						</li>
					</ul>
				</div>
			</div>
		</div>
		<!-- CONTENT AREA -->
		<div class="col">
			<div class="body-card mt-4 p-4">
				<div class="container-fluid d-flex justify-content-end mt-2">
					<div class="d-flex align-items-center p-2">
						<div class="search-box">
							<input type="text" class="search-input" placeholder="Search...">
							<button class="search-btn">
								<i class="bi bi-search"></i>
							</button>
						</div>
						<!-- <div class="search-box">
							<button class="search-btn">
								<i class="bi bi-plus"></i>
							</button>
						</div> -->
					</div>
				</div>
				<!-- Product Management Section -->
				<div class="main" data-section="product-management">
					<h1 class="h1-title text-center title-items">Product Management</h1>
					<h1 class="h1-title text-center title-items-add d-none">Add Product</h1>
					<div class="container-fluid d-flex justify-content-end mt-2">
						<div class="d-flex align-items-center p-2">
							<div class="search-box">
								<input type="text" class="search-input" placeholder="Search...">
								<button class="search-btn">
									<i class="bi bi-search"></i>
								</button>
							</div>
							<div class="search-box">
								<button class="product-btn">
									<i class="bi bi-plus bi-plus-admin"></i>
									<i class="bi bi-list  bi-list-admin d-none"></i>
								</button>
							</div>
						</div>
					</div>
					<!-- Table -->
					<div class="container-fluid p-2">
						<table class="table table-bordered table-items">
							<thead>
								<tr>
									<th><input type="checkbox" id="select-all"></th>
									<th>ID</th>
									<th>Product Name</th>
									<th>Quantity</th>
									<th>Type</th>
									<th>Brand</th>
									<th>Description</th>
									<th>Actions</th>
								</tr>
							</thead>
							<tbody>
								<!-- row 1 -->
								<tr>
									<td><input type="checkbox" class="select-item"></td>
									<td>AZ12ILKJD</td>
									<td>Ever Clear</td>
									<td>50</td>
									<td>Limited</td>
									<td>Whisky</td>
									<td>1000$</td>
									<td class="actions">
										<button class="btn btn-warning edit-btn">
											<i class="bi bi-pencil"></i>
										</button>
										<button class="btn btn-danger delete-btn">
											<i class="bi bi-trash"></i>
										</button>
									</td>
								</tr>
							</tbody>
						</table>
						<!-- add product -->
						<div class="container row p-4 add-items d-none">
							<form id="productForm">
								<!-- Form inputs -->
								<div class="input-group">
									<label for="productId">ID</label>
									<input type="number" class="input-field" id="productId"
										   placeholder="Enter product ID">
								</div>
								<div class="input-group">
									<label for="productName">NAME PRODUCT</label>
									<input type="text" class="input-field" id="productName"
										   placeholder="Enter product name">
								</div>

								<div class="input-group">
									<label for="productPrice">PRICE</label>
									<div class="d-flex">
										<input type="number" class="input-field" id="productPrice"
											   placeholder="Enter price">
									</div>

								</div>

								<div class="input-group">
									<label for="productSize">SIZE (ml)</label>
									<input type="text" class="input-field" id="productSize"
										   placeholder="Enter size">
								</div>

								<div class="input-group">
									<label for="productABV">ACOHOL BY VOLUME (%)</label>
									<input type="text" class="input-field" id="productABV" placeholder="Enter ABV">
								</div>

								<div class="input-group">
									<label for="productQuantity">QUANTITY</label>
									<input type="number" class="input-field" id="productQuantity"
										   placeholder="Enter quantity">
								</div>

								<div class="input-group">
									<label for="productDescription">DESCRIPTION</label>
									<textarea class="input-field border" id="productNotes" rows="6"
											  placeholder="Enter any additional notes about the product..."></textarea>
								</div>

								<div class="input-group">
									<label for="productAge">AGE (year)</label>
									<input type="number" class="input-field" id="productAge"
										   placeholder="Enter age">
								</div>

								<div class="input-group">
									<label for="productVarietal">VARIETAL</label>
									<input type="text" class="input-field" id="productVarietal"
										   placeholder="Enter varietal">
								</div>

								<div class="input-group">
									<label for="productStatus">STATUS</label>
									<input type="text" class="input-field" id="productStatus"
										   placeholder="Enter status">
								</div>

								<!-- Featured Product Checkbox -->
								<div class=" featured-checkbox">
									<input type="checkbox" id="productFeatured" class="checkbox-input">
									<label for="productFeatured" class="checkbox-label">
										<strong>
											Make this product
											featured
										</strong>
									</label>
								</div>
								<div class="product-image-section text-center">
									<h5>Product Images</h5>
									<div class="image-upload-section">
										<input type="file" class="upload-file" id="productImages" multiple
											   onchange="displayImages(this)">
									</div>
									<div id="imagePreviewContainer" class="image-preview-container">
										<!-- Images and paths will be displayed here -->
									</div>
								</div>

								<div class="text-center">
									<button type="submit" class="submit-btn btn-block">
										Add
										Product
									</button>
								</div>
							</form>
						</div>
					</div>
				</div>
				<!-- User Management Section -->
				<div class="main" data-section="UserManagement">
				</div>
				<!-- Brand Management Section -->
				<div class="main" data-section="brand-management">
					<h1 class="h1-title text-center title-items">Brand Management</h1>
					<h1 class="h1-title text-center title-items-add d-none">Add Brand</h1>
					<div class="container-fluid d-flex justify-content-end mt-2">
						<div class="d-flex align-items-center p-2 gap-2">
							<div class="d-flex align-items-center p-2">
								<div class="search-box">
									<input type="text" class="search-input" placeholder="Search...">
									<button class="search-btn">
										<i class="bi bi-search"></i>
									</button>
								</div>
								<div class="search-box">
									<button class="product-btn">
										<i class="bi bi-plus bi-plus-admin"></i>
										<i class="bi bi-list  bi-list-admin d-none"></i>
									</button>
								</div>
							</div>
						</div>
					</div>
					<!-- Table -->
					<div class="container-fluid p-2">
						<table class="table table-bordered table-items">
							<thead>
								<tr>
									<th><input type="checkbox" id="select-all"></th>
									<th>ID</th>
									<th>Name</th>
									<th>Country</th>
									<th>Image</th>
									<th>Collab</th>
									<th>Actions</th>
								</tr>
							</thead>
							<tbody>
								<!-- Example row -->
								<tr>
									<td><input type="checkbox" class="select-item"></td>
									<td>BR001</td>
									<td>Brand A</td>
									<td>USA</td>
									<td>
										<img src="images/brand_a.jpg" alt="Brand A"
											 style="width: 50px; height: 50px;">
									</td>
									<td>Yes</td>
									<td class="actions">
										<button class="btn btn-warning edit-btn">
											<i class="bi bi-pencil"></i>
										</button>
										<button class="btn btn-danger delete-btn">
											<i class="bi bi-trash"></i>
										</button>
									</td>
								</tr>
							</tbody>
						</table>
						<!-- Add Brand Form -->
						<div class="container row p-4 add-items d-none">
							<form id="brandForm">
								<!-- Form inputs -->
								<div class="input-group">
									<label for="brandId">ID</label>
									<input type="text" class="input-field" id="brandId"
										   placeholder="Enter brand ID">
								</div>
								<div class="input-group">
									<label for="brandName">Name</label>
									<input type="text" class="input-field" id="brandName"
										   placeholder="Enter brand name">
								</div>
								<div class="input-group">
									<label for="brandCountry">Country</label>
									<input type="text" class="input-field" id="brandCountry"
										   placeholder="Enter country">
								</div>
								<div class="input-group">
									<label for="brandImage">Image</label>
									<input type="file" class="input-field" id="brandImage">
								</div>
								<div class="input-group">
									<label for="brandCollab">Collab</label>
									<select id="brandCollab" class="input-field">
										<option value="Yes">Yes</option>
										<option value="No">No</option>
									</select>
								</div>
								<div class="text-center">
									<button type="submit" class="submit-btn btn btn-primary btn-block">
										Add
										Brand
									</button>
								</div>
							</form>
						</div>
					</div>
				</div>
				<!-- Category Management Section -->
				<div class="main" data-section="category-management">
					<h1 class="h1-title text-center title-items">Category Management</h1>
					<h1 class="h1-title text-center title-items-add d-none">Add New Category</h1>
					<div class="container-fluid d-flex justify-content-end mt-2">
						<div class="d-flex align-items-center p-2">
							<div class="search-box">
								<!-- set controller to searching -->
								<input type="text" class="search-input" placeholder="Search..."
									   data-target="controller">
								<button class="search-btn">
									<i class="bi bi-search"></i>
								</button>
							</div>
							<div class="search-box">
								<button class="product-btn">
									<i class="bi bi-plus bi-plus-admin"></i>
									<i class="bi bi-plus bi-list-admin d-none"></i>
								</button>
							</div>
						</div>
					</div>
					<!-- Table catogory -->
					<table class="table table-bordered table-items">
						<thead>
							<tr>
								<th>Active</th>
								<th>Name</th>
								<th>Category parent</th>
								<th>Actions</th>
							</tr>
						</thead>
						<tbody>
							<!-- row 1 -->
							<tr>
								<td><input type="checkbox" class="select-item"></td>
								<td>Whisky</td>
								<td>Empty</td>
								<td class="actions">
									<!-- set id -->
									<button class="btn btn-warning edit-btn" value="id">
										<i class="bi bi-pencil"></i>
									</button>
								</td>
							</tr>
						</tbody>
					</table>
					<div class="container row p-4 add-items d-none">
						<form action="" method="post">
							<!-- Parent Name -->
							<div class="input-group">
								<label class="form-label">Parent Name</label>
								<input type="text" class="input-field" readonly value="Whisky" data-value="mã_parent">
							</div>
							<!-- Name -->
							<div class="input-group">
								<label class="form-label">Category Name</label>
								<input type="text" class="input-field" name="name-category" placeholder="Enter category name" required />
							</div>
							<!-- Describe -->
							<div class="input-group">
								<label class="form-label">Description</label>
								<textarea class="input-field border" name="describe-category"
										  placeholder="Enter category description"></textarea>
							</div>

							<!-- Buttons -->
							<div>
								<button type="submit" class="btn btn-primary">Save</button>
								<button type="reset" class="btn btn-secondary">Reset</button>
							</div>
						</form>
					</div>
				</div>
				<!-- Voucher Management Section -->
				<div class="main" data-section="VoucherManagement">
				</div>
				<!-- Solving Order Section -->
				<div class="main" data-section="PendingOrders">
					@Html.Partial("_PendingOrdersView", null);
				</div>
				<div class="main" data-section="BankManagement">
					@Html.Partial("_BankManagementView", null);
				</div>
				<!-- Upload Knowledge Section -->
				<div class="main" data-section="upload-knowledge">
					<h1 class="h1-title text-center">Upload Knowledge Management</h1>
					<div class="container-fluid d-flex justify-content-end mt-2">
						<div class="d-flex align-items-center p-2">
							<div class="search-box">
								<input type="text" class="search-input" placeholder="Search knowledge...">
								<button class="search-btn">
									<i class="bi bi-search"></i>
								</button>
							</div>
							<div class="search-box">
								<button class="upload-btn" id="knowledgeUploadBtn">
									<i class="bi bi-plus"></i>
								</button>
							</div>
						</div>
					</div>
					<!-- Knowledge Table -->
					<div class="container-fluid p-2">
						<table class="table table-bordered">
							<thead>
								<tr>
									<th><input type="checkbox" id="select-all"></th>
									<th>Knowledge Name</th>
									<th>Upload Date</th>
									<th>Status</th>
									<th>Actions</th>
								</tr>
							</thead>
							<tbody>
								<!-- Sample Row -->
								<tr>
									<td><input type="checkbox" class="select-item"></td>
									<td>An AI Research Study</td>
									<td>2024-12-01</td>
									<td>Approved</td>
									<td class="actions">
										<button class="btn btn-warning edit-btn">
											<i class="bi bi-pencil"></i>
										</button>
										<button class="btn btn-danger delete-btn">
											<i class="bi bi-trash"></i>
										</button>
									</td>
								</tr>
							</tbody>
						</table>
					</div>
					<!-- Knowledge Upload Form -->
					<div class="container row p-4 add-items d-none" id="uploadFormContainer">
						<form id="uploadKnowledgeForm" enctype="multipart/form-data">
							<div class="input-group">
								<label for="knowledgeTitle">Knowledge Title</label>
								<input type="text" class="input-field" id="knowledgeTitle" placeholder="Enter knowledge title">
							</div>
							<div class="input-group">
								<label for="knowledgeDescription">Description</label>
								<textarea class="input-field" id="knowledgeDescription" placeholder="Enter knowledge description"></textarea>
							</div>
							<div class="input-group">
								<label for="knowledgeCategory">Category</label>
								<input type="text" class="input-field" id="knowledgeCategory" placeholder="Enter category">
							</div>
							<div class="input-group">
								<label for="uploadDate">Upload Date</label>
								<input type="date" class="input-field" id="uploadDate">
							</div>
							<div class="input-group">
								<label for="fileUpload">Select Knowledge File</label>
								<input type="file" class="input-field" id="fileUpload" name="fileUpload">
							</div>
							<div class="text-center">
								<button type="submit" class="submit-btn btn-block">Upload Knowledge</button>
							</div>
						</form>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>
<script src="~/js/admin.js"></script>
