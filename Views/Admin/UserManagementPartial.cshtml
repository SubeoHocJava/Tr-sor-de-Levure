@model List<Web_WineShop.Models.UserManagementViewModel>

<h1 class="h1-title text-center">User Management</h1>

<div class="container-fluid p-2">

    <table class="table table-bordered">
        <thead>
            <tr>
                <th><input type="checkbox" id="select-all"></th>
                <th>Full Name</th>
                <th>Phone Number</th>
                <th>Email</th>
                <th>Ban</th>
                <th>Role</th>
                <th>Points</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var user in Model)
            {
                <tr data-id="@user.Id">
                    <td><input type="checkbox" class="select-item"></td>
                    <td>@user.FullName</td>
                    <td>@user.Phone</td>
                    <td>@user.Email</td>
                    <td>@user.Ban</td>
                    <td>@user.Role</td>
                    <td>@user.Points</td>
                    <td class="actions">
                        <button class="btn btn-warning edit-btn">
                            <i class="bi bi-pencil"></i> Edit
                        </button>
                        @*  <button class="btn btn-danger delete-btn">
                    <i class="bi bi-trash"></i> Delete
                    </button> *@
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
